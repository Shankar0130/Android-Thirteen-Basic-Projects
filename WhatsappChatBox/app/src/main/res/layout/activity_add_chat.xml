<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddChat"
    android:id="@+id/root_relative_layout">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/user_what"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_margin="20dp"
        android:id="@+id/name_Relative_layout">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/name_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_person"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/show_name_hint"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/name_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="********"
            android:layout_below="@+id/show_name_hint"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/name_icon"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simple_hint"
            android:text="This is not your username or pin. This name \n will be visible to your WhatsApp contacts"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/name_icon"
            android:layout_below="@+id/name"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_Relative_layout"
        android:layout_margin="20dp"
        android:id="@+id/about_Relative_layout"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/about_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/about"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:id="@+id/show_about_hint"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/about_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about"
            android:text="********"
            android:layout_below="@+id/show_about_hint"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/about_icon"
            android:textSize="20sp"
            android:textColor="#000000"/>




    </RelativeLayout>

